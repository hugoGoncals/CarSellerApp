<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainTheme" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="PageTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:textColor">#666666</item>
    </style>
    
    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item> 
        <item name="strokeColor">#A2ABB1</item> 
        <item name="strokeWidth">1dp</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <style name="CardLabelStyle">
        <item name="android:textSize">16sp</item> 
        <item name="android:textColor">#333333</item> 
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>
    
    <style name="GoalPhoto">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ThemeOverlay.App.Card" parent="">
        <item name="colorPrimary">#FFE1E6</item>
        <item name="colorSurface">#FFDFD9</item>
        <item name="colorOnSurface">#442C2E</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="SectionTitle">
        <item name="android:textColor">#003366</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="ItemTitle">
        <item name="android:textColor">#336699</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="ItemDescription">
        <item name="android:textColor">#666666</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">14sp</item>
    </style>



    <style name="Title">
        <item name="android:textColor">#333C45</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:textSize">22sp</item>
    </style>
    
    <style name="Subtitle">
        <item name="android:textColor">#333C45</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="CustomSliderTheme" parent="Widget.Material3.Slider">
        <item name="thumbColor">#666666</item>
        <item name="trackColorActive">#666666</item>
        <item name="trackColorInactive">#CCCCCC</item>
        <item name="haloColor">#4D666666</item>
        <item name="tickColorActive">#666666</item>
        <item name="tickColorInactive">#CCCCCC</item>
    </style>
    
    <style name="ButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:height">@dimen/gap_15</item>
        <item name="android:width">0dp</item>
        <item name="strokeColor">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">#333C45</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">@dimen/corner_radius_m</item>
        <item name="android:layout_marginBottom">@dimen/bottom_margin</item>
        <item name="android:layout_marginStart">@dimen/button_side_margin</item>
        <item name="android:layout_marginEnd">@dimen/button_side_margin</item>
    </style>

    <style name="AuctionCountdownLabel" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>>
        <item name="android:textColor">#D32F2F</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>